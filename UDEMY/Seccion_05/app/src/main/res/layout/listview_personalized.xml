<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="90dp">

    <ImageView
        android:id="@+id/listViewPersonalizedImgVIcon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/listViewPersonalizedTxtVName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/listViewPersonalizedTxtVName"
        app:srcCompat="@android:drawable/btn_star_big_on"
        tools:ignore="ContentDescription,RtlHardcoded" />

    <TextView
        android:id="@+id/listViewPersonalizedTxtVName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/listViewPersonalizedImgVIcon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.528"
        app:layout_constraintRight_toLeftOf="@+id/imageView"
        android:layout_marginRight="10dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/checkbox_on_background"
        android:layout_marginRight="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/listViewPersonalizedTxtVName"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/listViewPersonalizedTxtVName"
        android:layout_marginBottom="0dp"
        app:layout_constraintVertical_bias="0.454"
        tools:ignore="ContentDescription,RtlHardcoded" />
</android.support.constraint.ConstraintLayout>

